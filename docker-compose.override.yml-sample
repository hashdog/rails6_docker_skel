version: '3.7'
services:
  db:
    image: postgres:12-alpine
    environment:
      - POSTGRES_PASSWORD: postgres
    ports:
      - "5432:5432"

    volumes:
      - postgres:/var/lib/postgresql/data
  redis:
    image: 'redis:6.0.1-alpine'
    ports:
      - '6379:6379'
    volumes:
      - 'redis:/data'
  app:
    build:
      args:
        - RAILS_ENV=development
        - RAILS_SECRET=foo
    depends_on:
      - db
    ports:
      - "3000:3000"
volumes:
  postgres:
  redis: